
@{
    ViewData["Title"] = "ثبت نام کاربر جدید";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">ثبت نام کاربر جدید</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form" enctype="multipart/form-data" method="post">
        <div class="box-body">
            <div class="row">
                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <fieldset class="form-group">
                        <label for="FullName">نام و نام خانوادگی</label>
                        <input type="text" class="form-control" id="FullName" name="FullName" placeholder="نام کامل">
                    </fieldset>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <fieldset class="form-group">
                        <label for="Email">پست الکترونیک</label>
                        <small class="text-muted"><i>info@bugeto.net</i></small>
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="ایمیل">
                    </fieldset>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <fieldset class="form-group">
                        <label for="Role">نقش</label>
                        <select class="form-control" id="Role" name="Role" asp-items="@ViewBag.Roles">
                            <option>گزینه 1</option>
                            <option>گزینه 2</option>
                        </select>
                        <p><small class="text-muted">سطح دسترسی کاربر مورد نظر را تعیین کنید</small></p>
                    </fieldset>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <fieldset class="form-group">
                        <label for="Password">رمز عبور</label>
                        <input type="password" class="form-control" id="Password" name="Password" placeholder="رمز عبور">
                    </fieldset>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <fieldset class="form-group">
                        <label for="ConfirmPassword">تکرار رمز عبور</label>
                        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="تکرار رمز عبور">
                    </fieldset>
                </div>

                <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                    <fieldset class="form-group">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe">
                            <label class="form-check-label" for="RememberMe">مرا به خاطر بسپار</label>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
        <!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-success col-md-12">تکمیل فرم ثبت نام</button>
        </div>
    </form>
</div>
