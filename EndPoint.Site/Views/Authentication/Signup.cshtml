    <link rel="apple-touch-icon" sizes="76x76" href="~/SiteTemplate/assets/img/favicon.png">
    <link rel="icon" type="image/png" href="~/SiteTemplate/assets/img/favicon.png">
    <title>ایجاد حساب کاربری </title>
    <meta name="description" content="مَسای شاپ ">
    <meta name="author" content="Mirazimi">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no" name="viewport">


    <!-- CSS Files -->
    <link href="~/SiteTemplate/assets/fonts/font-awesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="~/SiteTemplate/assets/fonts/font-awesome/css/solid.css" rel="stylesheet">
